library = {
    'Евгений Онегин': {'author': 'А.С.Пушкин', 'year': '1833', 'available': True},
    'Война и мир': {'author': 'Л.Н.Толстой', 'year': '1867', 'available': True},
    'Ася': {'author': 'И.С.Тургенев', 'year': '1858', 'available': False}
}

def book_list_view(library):
    if not library:
        print('В библиотеке нет книг')
    else:
        available_books = [title for title, info in library.items() if info['available']]
        unavailable_books = [title for title, info in library.items() if not info['available']]
        print('Список книг в наличии:')
        for book in available_books:
            print(f'- {book}')
        print('Список отсутствующих книг:')
        for book in unavailable_books:
            print(f'- {book}')


def create_book(author, year):
    return {
        'author': author,
        'year': year,
        'available': True
    }
    
    
def add_book(author, year):
    if library[title]:
        response = input(str(f'Книга "{title}" уже есть в библиотеке. Хотите обновить информацию о ней? Да/нет: '))
        if response.lower() == "да":
            library[title] = create_book(title, author, year)
            print(f'Книга "{title}" была успешно обновлена!')
        else:
            print(f'Изменений не произошло.')
    else:
        library[title] = create_book(title, author, year)
        print(f'Книга "{title}" была успешно добавлена в библиотеку!')


def remove_book(title):
    if not library[title]:
        print('Книга не найдена')
    else:
        del library[title]
        print(f'Книга "{title}" была удалена')


def issue_book(title):
    if library[title]:
        book = library[title]
        if book['available']:
            book['available'] = False
            print(f'Книга "{title}" успешно выдана!')
        else:
            print('Книга отсуттсвует.')
    else:
        print('Книга не найдена в библиотеке.')


def return_book(title):
    if library[title]:
        book = library[title]
        if not book['available']:
            book['available'] = True
            print(f'Книга "{title}" возвращена!')
        else:
            print('Книга уже была возвращена.')
    else:
        print('Книга не найдена в библиотеке.')


def find_book(title):
    if library[title]:
        info = library[title]
        print(f'Название книги: {title}\nАвтор: {info["author"]}\nГод выпуска: {info["year"]}')
        if info['available']:
            print('Наличие: Книга доступна.')
        else:
            print('Наличие: Книга выдана.')
        
    else:
        print('Книга не найдена в библиотеке.')


print('МЕНЮ БИБЛИОТЕКИ\n1.Просмотр списка книг в/не в наличии')
print('2.Добавить книгу')
print('3.Удалить книгу')
print('4.Выдать книгу')
print('5.Вернуть книгу')
print('6.Найти информацию о книге\n')
menu = input('Перед Вами находится меню библиотеки. Напишите число соответсвующее подходящему Вам варианту: ')
while menu > '6':
    menu = input('Ошибка! Введите число соответсвующее представленным в меню вариантам: ')
while menu < '1':
    menu = input('Ошибка! Введите число соответсвующее представленным в меню вариантам: ')
if menu == '1':
    book_list_view(library)
elif menu == '2':
    title = input(str('\nВведите название книги: '))
    add_book(title, author, year)
elif menu == '3':
    title = input(str('\nВведите название книги: '))
    remove_book(title)
elif menu == '4':
    title = input(str('\nВведите название книги: '))
    issue_book(title)
elif menu == '5':
    title = input(str('\nВведите название книги: '))
    return_book(title)
else:
    title = input(str('\nВведите название книги: '))
    find_book(title)
print('\nПроцесс завершен.')


